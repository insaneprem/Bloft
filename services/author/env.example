# Author Service Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5001

# PostgreSQL Database Configuration
DB_URL=postgresql://username:password@localhost:5432/bloft_authors

# Cloudinary Configuration (for image uploads)
Cloud_Name=your_cloudinary_cloud_name
Cloud_Api_Key=your_cloudinary_api_key
Cloud_Api_Secret=your_cloudinary_api_secret

# RabbitMQ Configuration (CloudAMQP URL)
RABBITMQ_URL=your_rabbitmq_url

# Google AI Configuration (for content generation)
Gemini_Api_Key=your_google_ai_api_key

# JWT Configuration
JWT_SEC=your_jwt_secret_key_here_make_it_long_and_secure 